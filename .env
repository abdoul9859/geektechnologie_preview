# Configuration de l'environnement
# Définir à 'production' pour l'environnement de production
ENVIRONMENT=development

# Base de données
# Pour Docker, DATABASE_URL sera surchargé dans docker-compose.yml
DATABASE_URL=postgresql://postgres:123@localhost:5432/geektechnologie_db
DB_SSLMODE=disable

# Variables de protection pour la production
# FORCE_INIT=true          # Force l'initialisation en production
# FORCE_MIGRATE=true       # Force les migrations en production  
# FORCE_SEED=true          # Force le seeding en production

# Variables de seeding (développement uniquement)
SEED_DEFAULT_DATA=false           # Créer des données par défaut (utilisateurs, catégories, clients)
SEED_LARGE_TEST_DATA=false        # Créer des données de test massives

# Configuration du seeding de test (si SEED_LARGE_TEST_DATA=true)
SEED_CLIENTS=50
SEED_PRODUCTS=100
SEED_VARIANTS_MIN=1
SEED_VARIANTS_MAX=5
SEED_INVOICES=75
SEED_QUOTATIONS=75
SEED_BANK_TX=100

# Configuration de l'application
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Clé stable (ne change pas entre redémarrages)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256

# Durée de session confortable (ex: 1 jour)
ACCESS_TOKEN_EXPIRE_MINUTES=1441

# Activer la confiance dans les claims JWT (plus de dépendance DB pour chaque requête)
AUTH_TRUST_JWT_CLAIMS=true

# Options cookie (local)
AUTH_COOKIE_NAME=gt_access
AUTH_COOKIE_SAMESITE=lax
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_PATH=/

# Init + seed (legacy - gardé pour compatibilité)
INIT_DB_ON_STARTUP=true